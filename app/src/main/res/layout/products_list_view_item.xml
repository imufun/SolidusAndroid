<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/products_list_view_item_container"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    custom:cardCornerRadius="0dp"
    custom:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/products_list_view_item_img"
            android:layout_width="95dp"
            android:layout_height="95dp"></ImageView>

        <RelativeLayout
            android:id="@+id/products_list_view_item_txt_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/products_list_view_item_img">

            <TextView
                android:id="@+id/products_list_view_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="200dp"
                android:text="Checked Shirts"
                android:textColor="@color/textColor"
                android:textSize="18sp" android:typeface="serif"></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/products_list_view_item_stock"
                android:layout_below="@id/products_list_view_item_name"
                android:layout_marginLeft="10dp"
                android:text="12 in stock"
                android:layout_marginTop="10dp" android:textSize="16sp" android:typeface="serif"/>

            <TextView
                android:id="@+id/products_list_view_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/products_list_view_item_stock"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Rs 2699"
                android:textColor="@color/googleYellow"
                android:textSize="16sp" android:typeface="serif"></TextView>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>


